@page
@using System.Linq
@model BookListRazor.Pages.BookList.Index

<br>
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="Upsert" class="btn btn-info text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Any())
            {
                <table class="table table-striped border">
                    <thead>
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Isbn"></label>
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Isbn)
                            </td>
                            <td>
                                <button
                                    asp-page-handler="Delete"
                                    asp-route-id="@item.Id"
                                    onclick="return confirm('Are you sure you want to delete?')"
                                    class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                                <a asp-page="Upsert" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align: center;">
        <br>
        <span class="h3 text-info">OR</span>
        <br><br>
    </div>

    <div class="col-12 border p3">
        <table id="DT_load" class="table table progress-bar-striped table-bordered" style="width: 100%;">
            <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>ISBN</th>
                <th></th>
            </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts {
    <script src="~/js/bookList.js"></script>
}
